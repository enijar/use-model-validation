{
  "private": false,
  "name": "use-model-validation",
  "version": "0.1.1",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Enijar/use-model"
  },
  "description": "Store data in a model and validate that data anywhere",
  "author": "Enijar",
  "license": "MIT",
  "scripts": {
    "format": "npx prettier@^2.0.5 lib --write",
    "build": "npx tsc -p tsconfig.lib.json",
    "test": "npx jest",
    "test-watch": "npx jest --watchAll",
    "prepublishOnly": "npm test && npm run build"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "preset": "ts-jest"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "jest": "^26.4.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "ie 11"
  ]
}
